{
	"manifest_version": 2,
	"name": "Reading List",
	"version": "2.0",
	"description": "Add the current page to a reading list and view the list.",
	"permissions": ["storage", "activeTab"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icon.png",
			"48": "icon.png",
			"128": "icon.png"
		},
		"default_title": "Manage Reading List"
	},
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"applications": {
		"gecko": {
			"id": "reading-list@example.com",
			"strict_min_version": "60.0"
		}
	}
}
